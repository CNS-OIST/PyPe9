<?xml version="1.0" encoding="UTF-8"?>
<NineML xmlns="http://nineml.incf.org/9ML/0.3" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://nineml.incf.org/9ML/0.3/../NineML_v0.3.xsd">
    <ComponentClass name="IzhikevichFastSpiking">
        <Parameter name="a" dimension="none"/>
        <Parameter name="b" dimension="none"/>
        <Parameter name="c" dimension="voltage"/>
        <Parameter name="k" dimension="none"/>
        <Parameter name="Vpeak" dimension="voltage"/>
        <Parameter name="Vt" dimension="voltage"/>
        <Parameter name="Vr" dimension="voltage"/>
        <Parameter name="Vb" dimension="voltage"/>
        <Parameter name="Cm" dimension="capacitance"/>
        <AnalogPort name="Isyn" mode="reduce" dimension="current"/>
        <AnalogPort name="Iext" mode="receive" dimension="current"/>
        <AnalogPort name="V" mode="send" dimension="voltage"/>
        <AnalogPort name="U" mode="send" dimension="none"/>
        <EventPort name="spikeOutput" mode="send"/>
        <Dynamics>
            <StateVariable name="V" dimension="voltage"/>
            <StateVariable name="U" dimension="none"/>
            <Alias name="UU">
                <MathInline> heaviside (V - Vb) * (b * (V - Vb) * (V - Vb) * (V - Vb)) </MathInline>
            </Alias>
            <Regime name="subthresholdRegime">
                <TimeDerivative variable="V">
                    <MathInline> ((k * (V - Vr) * (V - Vt) - U + Isyn + Iext) / Cm) </MathInline>
                </TimeDerivative>
                <TimeDerivative variable="U">
                    <MathInline> a * (UU - U) </MathInline>
                </TimeDerivative>
                <OnCondition>
                    <Trigger>
                        <MathInline>V &gt; Vpeak </MathInline>
                    </Trigger>
                    <StateAssignment variable="V">
                        <MathInline>c</MathInline>
                    </StateAssignment>
                    <StateAssignment variable="U">
                        <MathInline>U</MathInline>
                    </StateAssignment>
                    <EventOut port="spikeOutput"/>
                </OnCondition>
            </Regime>
        </Dynamics>
    </ComponentClass>
</NineML>
