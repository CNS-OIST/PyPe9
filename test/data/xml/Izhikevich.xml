<?xml version="1.0" encoding="UTF-8"?>
<NineML xmlns="http://nineml.net/9ML/1.0">
  <Dimension name="voltage" m="1" l="2" t="-3" i="-1"/>
  <Dimension name="current" i="1"/>
  <Dimension name="dimensionless"/>
  <Dimension name="specificCapacitance" m="-1" l="-4" t="4" i="2"/>
  <ComponentClass name="IzhikevichFastSpiking">
    <Parameter name="a" dimension="dimensionless"/>
    <Parameter name="b" dimension="dimensionless"/>
    <Parameter name="c" dimension="voltage"/>
    <Parameter name="k" dimension="dimensionless"/>
    <Parameter name="Vpeak" dimension="voltage"/>
    <Parameter name="Vt" dimension="voltage"/>
    <Parameter name="Vr" dimension="voltage"/>
    <Parameter name="Vb" dimension="voltage"/>
    <Parameter name="Cm" dimension="specificCapacitance"/>
    <AnalogReducePort name="Isyn" dimension="current" operator="+"/>
    <AnalogReceivePort name="Iext" dimension="current"/>
    <AnalogSendPort name="V" mode="send" dimension="voltage"/>
    <AnalogSendPort name="U" mode="send" dimension="dimensionless"/>
    <EventSendPort name="spikeOutput"/>
    <Dynamics>
      <StateVariable name="V" dimension="voltage"/>
      <StateVariable name="U" dimension="dimensionless"/>
      <Alias name="UU">
        <MathInline> heaviside (V - Vb) * (b * (V - Vb) * (V - Vb) * (V - Vb)) </MathInline>
      </Alias>
      <Regime name="subthresholdRegime">
        <TimeDerivative variable="V">
          <MathInline> ((k * (V - Vr) * (V - Vt) - U + Isyn + Iext) / Cm) </MathInline>
        </TimeDerivative>
        <TimeDerivative variable="U">
          <MathInline> a * (UU - U) </MathInline>
        </TimeDerivative>
        <OnCondition>
          <Trigger>
            <MathInline>V &gt; Vpeak </MathInline>
          </Trigger>
          <StateAssignment variable="V">
            <MathInline>c</MathInline>
          </StateAssignment>
          <StateAssignment variable="U">
            <MathInline>U</MathInline>
          </StateAssignment>
          <EventOut port="spikeOutput"/>
        </OnCondition>
      </Regime>
    </Dynamics>
  </ComponentClass>
  <Component name="IzhikevichFastSpiking_Iext100">
    <Definition>IzhikevichFastSpiking</Definition>
    <Property name="a">
      <SingleValue>0.2</SingleValue>
    </Property>
    <Property name="b">
      <SingleValue>0.025</SingleValue>
    </Property>
    <Property name="b">
      <SingleValue>-45.0</SingleValue>
    </Property>
    <Property name="Vpeak">
      <SingleValue>25.0</SingleValue>
    </Property>
    ...
    <Property name="Iext">
      <SingleValue>100.0</SingleValue>
    </Property>
    <Initial name="V">
      <SingleValue>-65.0</SingleValue>
    </Initial>
    <Initial name="U">
      <SingleValue>-1.625</SingleValue>
    </Initial>
  </Component>
</NineML>
