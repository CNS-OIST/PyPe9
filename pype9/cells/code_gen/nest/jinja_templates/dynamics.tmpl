{% for regime in componentclass.dynamics.regimes %}
    {%- if ode_solver in ('cvode', 'ida') -%}
extern "C" int {{component.name}}_{{regime.name}}_dynamics(double t_, N_Vector y_, N_Vector f_, void* pnode_) {
    {% else %}
extern "C" int {{component.name}}_{{regime.name}}_dynamics(double t_, const double y_[], double f_[], void* pnode_) {
    {% endif %}

    // Get a reference to the model
    assert(pnode_);
    const {{component.name}}& node_ = *(reinterpret_cast<{{component.name}}*>(pnode_));
   
    // Map parameters used in dynamics to current namespace
    {% for param in componentclass.parameters %}
    const double_t {{param.name}} = node_.P_.{{param.name}};
    {% endfor %}

    // Map port buffers to current namespace
    {% for port in componentclass.analog_receive_ports %}
    const double_t {{port.name}} = node_.B_.{{port.name}}_value;
    {% endfor %}
    
    // Map states used in dynamics to current namespace
    {% for state in componentclass.state_variables %}
    const double_t {{state.name}} = ITEM(y_, {{component.name}}::State_::{{state.name}}_INDEX);
    {% endfor %}
   
    // Add constants
    {% for const in componentclass.constants %}
        {% set scaled_value = unit_conversion(const.value, const.units) %}
    const static double_t {{const.name}} = {{scaled_value}}; // {{const.value}} ({{const.units.name}})
    {% endfor %}
   
    // Evaluate aliases used in differential equations 
    // (currently we print out all of them but they should be optimised out 
    // anyway I think FIXME: Need to be printed in order)
    {% for alias in componentclass.aliases %}
    const double_t {{alias.lhs}} = {{alias.rhs}};
    {% endfor %}

    // Evaluate differential equations
    {% for td in regime.time_derivatives %}
    ITEM(f_, {{component.name}}::State_::{{td.dependent_variable}}_INDEX) = {{td.rhs}};
    {% endfor %}

    {% if ode_solver in ('cvode', 'ida') %}
    return 0;
    {% else %}
    return GSL_SUCCESS;
    {% endif %}
}
{% endfor %}
